    "docker:down": "cd infra/docker && docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.4",
  "author": "Sheikh Jubaer Ahammed (Architect)"
}