{
  "name": "aiza-genesis",
  "private": true,
  "version": "0.0.0",
  "description": "The sovereign monorepo for the AIZA786Jackfrut OS.",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
